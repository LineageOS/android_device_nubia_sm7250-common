    symlink /sys/devices/platform/soc/984000.i2c/i2c-1/1-0020/input/input1/wake_gesture /data/vendor/tp/easy_wakeup_gesture
    write /sys/devices/platform/soc/984000.i2c/i2c-1/1-0020/input/input1/start_update 1

