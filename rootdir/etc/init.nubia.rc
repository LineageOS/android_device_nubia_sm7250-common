    write /sys/devices/platform/soc/984000.i2c/i2c-1/1-0020/input/input1/movable FF
    write /sys/devices/platform/soc/984000.i2c/i2c-1/1-0020/input/input1/stability 0E
    write /sys/devices/platform/soc/984000.i2c/i2c-1/1-0020/input/input1/precision 3A
    write /sys/devices/platform/soc/984000.i2c/i2c-1/1-0020/input/input1/sensitivity 3B

on property:sys.nubia.touch.prevention=0
    write /sys/devices/platform/soc/984000.i2c/i2c-1/1-0020/input/input1/gamemode 1
    write /sys/devices/platform/soc/984000.i2c/i2c-1/1-0020/input/input1/prevention 0

on property:sys.nubia.touch.prevention=1
